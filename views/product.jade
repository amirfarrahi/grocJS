extends layout

block title
  title #{title}

block content
  form( method="POST", action='/products/'+selectedProduct.id)
    input(name="_method",value="delete", type="hidden")
    input(id="delete", value="Delete", type="submit")
  P
    a(href='/products/'+ selectedProduct.id + '/edit') Edit info
  div
    table
      thead
        tr
          th Product Name 
          th Desc
          th Brand
      tbody
        tr
          td= selectedProduct.productname
          td= selectedProduct.desc
          td= selectedProduct.brand
